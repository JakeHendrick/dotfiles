[core]
  editor = nano
  autocrlf = input

[branch]
  sort = -committerdate

[fetch]
  prune = true

[pull]
  rebase = false

[rebase]
  autoStash = true

[include]
  path = ~/dotfiles/git/id
  path = ~/dotfiles/git/aliases
  path = ~/dotfiles/git/dev

# Change identity if path includes "shopify"
[includeIf "gitdir/i:**/shopify/**"]
  path = ~/dotfiles/git/id-shopify
